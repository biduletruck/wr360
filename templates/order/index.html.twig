{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>
    {{ dump(orders) }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>OrderNumber</th>
                <th>DeviationType</th>
                <th>ReasonCode</th>
                <th>CreationDate</th>
                <th>ModificationDate</th>
                <th>DeviationDate</th>
                <th>Store</th>
                <th>Country</th>
                <th>UserId</th>
                <th>OrderType</th>
                <th>Traitement</th>
                <th>DebutTraitement</th>
                <th>FinTraitement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.OrderNumber }}</td>
                <td>{{ order.DeviationType }}</td>
                <td>{{ order.ReasonCode }}</td>
                <td>{{ order.CreationDate ? order.CreationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.ModificationDate ? order.ModificationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.DeviationDate ? order.DeviationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.Store }}</td>
                <td>{{ order.Country }}</td>
                <td>{{ order.UserId }}</td>
                <td>{{ order.OrderType }}</td>
                <td>{{ order.Traitement ? 'Yes' : 'No' }}</td>
                <td>{{ order.DebutTraitement ? order.DebutTraitement|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.FinTraitement ? order.FinTraitement|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}">Create new</a>
{% endblock %}
