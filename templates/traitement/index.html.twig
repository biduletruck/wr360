{% extends 'base.html.twig' %}

{% block title %}Traitement index{% endblock %}

{% block body %}
    <h1>Traitement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TicketNumber</th>
                <th>Traitement</th>
                <th>CreatedAt</th>
                <th>actions</th>
                <th>Déjà traite</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
        {% for traitement in traitements %}
            <tr>
                <td>{{ traitement.id }}</td>
                <td>{{ traitement.TicketNumber }}</td>
                <td>{{ traitement.Traitement ? 'Yes' : 'No' }}</td>
                <td>{{ traitement.CreatedAt ? traitement.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ traitement.DejaTraite ? 'Yes' : 'No' }}</td>
                <td>{{ traitement.comment }}</td>
                <td>
                    <a href="{{ path('traitement_show', {'id': traitement.id}) }}">show</a>
                    <a href="{{ path('traitement_edit', {'id': traitement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('traitement_new') }}">Create new</a>
{% endblock %}
